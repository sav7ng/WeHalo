    background-size:contain; /**等比例缩放*/
}


/* 设置背景遮罩层样式 */
.mask {
    position: fixed;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.5);
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    z-index: 1030;
}

.masks {
    width: 100%;
    /* background-color: white; */
    position: absolute;
    left: -100%;
    opacity: 0;
    text-align: center;
}

.maskImg {
    width: 30%;
    float: left;
}


