/**post**/

.post-card, .post-feed {
    display: -ms-flexbox;
    display: flex;
}

.post-card {
    -ms-flex: 1 1 300px;
    /* flex: 1 1 300px; */
    -ms-flex-direction: column;
    flex-direction: column;
    overflow: hidden;
    margin: 0 20px 20px;
    min-height: 300px;
    background: #fff 50%;
    background-size: cover;
    border-radius: 5px;
    box-shadow: 8px 14px 38px rgba(39, 44, 49, 0.06), 1px 3px 8px rgba(39, 44, 49, 0.03);
    transition: all 0.5s ease;
    width: 90%;
    opacity: 0;
}

.post-card-image-link {
    /* position: relative; */
    display: block;
    overflow: hidden;
    border-radius: 5px 5px 0 0;
}

.post-card-content {
    -ms-flex-positive: 1;
    flex-grow: 1;
    display: -ms-flexbox;
    display: flex;
    -ms-flex-direction: column;
    flex-direction: column;
    -ms-flex-pack: justify;
    justify-content: space-between;
    width: 95%;
    height: 100%;
    /* border: 1px solid red; */
    margin: 5px auto;
}

.title {
    font-family: 微软雅黑;
    line-height: 1.15;
    font-weight: 700;
    text-rendering: optimizeLegibility;
    margin: 8px;
}

